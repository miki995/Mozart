<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/violin"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="com.inc.miki.mozart.SubMenuActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:src="@drawable/logo1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="33dp"
        android:weightSum="3">

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="@string/mmenu"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/right_menu"
            android:onClick="switchToRightMenu" />


        <Button
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:text="@string/fMenu"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/left_menu"
        android:onClick="switchToLeftMenu" />

        <Button
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="@string/drink"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/drink_menu"
            android:onClick="switchToDrinkMenu" />


    </LinearLayout>


</RelativeLayout>
